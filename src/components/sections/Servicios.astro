---
import {servicios} from '@data';
---
<section class="py-30">
	<div class="px-4 mx-auto max-w-screen-xl text-center">
		<h2 class="text-4xl md:text-5xl font-bold text-gray-700 mb-10">NUESTROS SERVICIOS</h2>

		<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
			<table class="w-full bg-white text-lg text-left rtl:text-right text-gray-500 dark:text-gray-400 font-bold">
				<tbody>
					{
						servicios.map(info =>{
							return (
							<tr class="border-b border-gray-200">
								<td class="px-6 py-4 text-gray-700">
									<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
									</svg>							  
								</td>
								<th scope="row" class="px-6 py-4 text-gray-700">
									{info.date}
								</th>
								<td class="px-6 py-4 text-gray-700">
									{info.hour}
								</td>
								<td class="px-6 py-4 text-gray-700">
									{info.name}
								</td>
							</tr>
							)
						})
					}
				</tbody>
			</table>
		</div>

	</div>
</section>